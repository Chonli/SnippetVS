<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>propParamI</Title>
			<Shortcut>proppi</Shortcut>
			<Description>Extrait de code pour la propriété, la sauvegarde des settings et le champ de stockage avec INotifyPropertyChanged</Description>
			<Author>Lichon</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>type</ID>
					<ToolTip>Type de propriété</ToolTip>
					<Default>int</Default>
				</Literal>
				<Literal>
					<ID>property</ID>
					<ToolTip>Nom de la propriété</ToolTip>
					<Default>MyProperty</Default>
				</Literal>

			</Declarations>
			<Code Language="csharp">
        <![CDATA[private $type$ _$property$;
	public $type$ $property$
	{
		get { return _$property$;}
		set { 
    if(_$property$!=value)
    {
    _$property$ = value;
	MyLocalSettings.Values["$property$"] = _$property$;
    NotifyPropertyChanged();
    }
    }
	}
	$end$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
